<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <h2> <%= post.title %> </h2>
          <div>  <%= post.comment %></div>
          <% if user_signed_in? %>
           <strong> <%= post.user.name %> <strong><br>
            <% end %> 
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
